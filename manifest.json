{
  "manifest_version": 3,
  "name": "Newsfeed Burner",
  "version": "1.1.0",
  "description": "Block social media newsfeeds so you can focus. Take a 15-minute procrastination break when needed.",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.reddit.com/*",
    "https://reddit.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.reddit.com/*",
        "https://reddit.com/*",
        "https://www.tiktok.com/*",
        "https://tiktok.com/*"
      ],
      "js": ["content/blocker.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Newsfeed Burner"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
